{
  "manifest_version": 2,
  "name": "Easy signup",
  "description": "Chrome extension aiming to make signing up easy.",
  "version": "0.1",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png"
  },
  "options_page": "src/options.html",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/easy_signup.js",
        "src/content_script.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "identity",
    "identity.email",
    "tabs"
  ]
}