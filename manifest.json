{
  "manifest_version": 2,

  "name": "Easy signup",
  "description": "Chrome extension aiming to make signing up easy.",
  "version": "0.1",

  "page_action": {
    //"default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "options_page": "options/options.html",

  "content_scripts": [{
    "matches": [
      "*://*/*"
    ],
    "js": [
      "js/easy_signup.js"
    ]
  }],

  "permissions": [
    "tabs",
    "storage"
  ]
}
